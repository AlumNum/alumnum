            <li class="active">
              <a href="/profiles/<%=current_alum_profile_id %>">My Profile </a>
            </li>
          <% elsif is_alum? %>
            <li class="active">
             <a href="/profiles/new">Create Profile</a>
            </li>
          <% else %>

          <% end %>
    
          <li class="active"><a href="#">Hello, <strong><%= current_user.first_name + " " + current_user.last_name %></strong><span class="sr-only">(current)</span></a>
         </li>
        
        <% else %>
          <li class="active">
          <%= link_to('Login', new_user_session_path)  %> 
          </li>

          <li><%= link_to('Sign Up', new_user_registration_path)  %> </li>
          <li> <%= link_to('Sign Up with Linkedin', user_omniauth_authorize_path(:linkedin))  %> </li>
        <% end %>
      </ul>

       
