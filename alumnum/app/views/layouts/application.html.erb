      <ul class="nav navbar-nav">
        <li class="active"><a href="/profiles">Profiles <span class="sr-only">(current)</span></a></li>
      
   <% if current_user %>
          <li class="active">
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> 
          </li>

