<h3> Admin User status panel </h3>
<table id="status">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @user_admin.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %> </td>
		<% if (Profile.where(user_id: user.id)) %>
			<% profile = Profile.where(user_id: user.id) %>	
			<td col width="80"><%= user.status %></td>
			<td><%= profile.view_count %></td>
		<% else %>
			<td> Incomplete Data </td>
		<% end %>
      </tr>
    <% end %>
      
  </tbody>
</table>


	<%= page_entries_info @user_admin %>
    <%= paginate @user_admin %>

<% end %>
<% end %>

