<h1>Alum Num: Better than LinkedIn. But what isnt?</h1>

<% if current_user %>
<% if current_user.type == 'Admin' %>

<div class="search-analytics">
<h3>Most Popular Searches </h3>
<% @searches.each do |s| %>
  <%= "#{s.query} - #{s.count} times" %><br>
<% end %>
</div>
<table>

<p> Admin User status panel </p>
<table id="status">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Profile View Count</th>
    </tr>
  </thead>

  <tbody>
    <% @user_admin.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %> </td>
        <td col width="80"><%= user.status %></td>
        <% profile = Profile.find(user_id = user.id) %>
        <td><%= profile.view_count %></td>
      </tr>
    <% end %>
      
  </tbody>
	
</table>


	<%= page_entries_info @user_admin %>
    <%= paginate @user_admin %>

<% end %>
<% end %>

<% if current_user %>
<% if current_user.type == 'Employer' %>
<p> You are signed in as an Employer</p>

<table id="status">
  <thead>
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>Tag</th>
    </tr>
  </thead>

  <tbody>
    <% @employer_limit_items.each do |tag| %>
    <% thisUser = User.find(tag.user_id) %>
    <% tagName = Tag.find(tag.tag_id) %>
      <tr>
        <td><%= tag.user_id %> </td>
        <td><%= "#{thisUser.first_name} #{thisUser.last_name}" %> </td>
        <td><%= tagName.skill_tag %> </td>
      </tr>
    <% end %>
      
  </tbody>
  
</table>
  <%= page_entries_info @employer_limit_items %>
  <%= paginate @employer_limit_items %>


<% end %>
<% end %>

